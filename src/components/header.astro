---
<style is:global>
:root {
  --kbm-green: #52682d;
  --kbm-green-2: #738c52;
  --kbm-bg: #e9ece7;
  --page-bg: #f7f8f7;
  --ring: #e5e8e0;
}

/* ===== FIXED HEADER ===== */
.kbm-header-wrap {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1000;
  background: var(--kbm-bg);
  box-shadow: 0 2px 6px rgba(0, 0, 0, .05);
}

.kbm-container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 8px 18px;
}

.kbm-header {
  border-bottom: 1px solid rgba(0, 0, 0, .06);
}

/* ===== TOPBAR ===== */
.kbm-topbar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 16px;
  padding: 6px 18px;
}

/* ===== LOGO ===== */
.kbm-logo {
  text-decoration: none;
  color: var(--kbm-green);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
}

.kbm-logo-text {
  font-family: "Shadows Into Light Two", cursive;
  font-size: 2.6rem;
  font-weight: 700;
  letter-spacing: .3px;
  line-height: 1;
}

.kbm-logo .by {
  font-size: .7em;
  color: #8a96a3;
  font-weight: 400;
  margin: 0 8px;
}

.kbm-logo .tagline {
  font-size: .95rem;
  color: var(--kbm-green);
  margin-top: 2px;
  letter-spacing: .3px;
}

/* ===== NAV ===== */
.kbm-nav {
  position: relative;
  z-index: 1100;
}

.kbm-menu {
  display: flex;
  align-items: center;
  gap: 20px;
  margin: 0;
  padding: 0;
  list-style: none;
}

.kbm-menu>li>a {
  color: var(--kbm-green);
  text-decoration: none;
  font-weight: 700;
  padding: 5px 6px;
  border-radius: 6px;
  display: inline-flex;
  align-items: center;
  gap: 6px;
}

.kbm-menu>li>a:hover {
  background: rgba(68, 86, 38, .1);
}

.caret {
  font-size: 1.2em;
  color: var(--kbm-green-2);
  margin-left: 3px;
}

/* LOGIN BUTTON */
.kbm-login {
  background: var(--kbm-green);
  color: #fff !important;
  padding: 6px 16px;
  border-radius: 6px;
  text-decoration: none;
  font-weight: 700;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  font-size: 0.95rem;
}

.kbm-login:hover {
  background: var(--kbm-green-2);
}

/* ===== DROPDOWNS ===== */
.dd {
  position: relative;
}

.dd-panel {
  position: absolute;
  top: calc(100% + 6px);
  left: 0;
  min-width: 220px;
  background: #f7f8f7;
  border: 1px solid var(--ring);
  border-radius: 8px;
  box-shadow: 0 6px 16px rgba(0, 0, 0, .12);
  padding: 6px 0;
  opacity: 0;
  visibility: hidden;
  pointer-events: none;
  transform: translateY(8px) scale(.98);
  transition: opacity .18s ease, transform .18s ease;
  z-index: 1200;
}

.dd.open>.dd-panel,
.dd:hover>.dd-panel {
  opacity: 1;
  visibility: visible;
  pointer-events: auto;
  transform: translateY(0) scale(1);
}

.dd-panel li {
  list-style: none;
}

.dd-panel a {
  display: block;
  padding: 8px 14px;
  color: var(--kbm-green);
  text-decoration: none;
  font-weight: 600;
  font-size: 0.95rem;
}

.dd-panel a:hover {
  background: rgba(68, 86, 38, .08);
}

/* ===== SEARCH BAR ===== */
.kbm-searchbar {
  background: var(--kbm-bg);
  padding: 4px 0 8px;
  display: flex;
  justify-content: center;
}

.kbm-search-wrap {
  display: flex;
  align-items: center;
  width: 100%;
  max-width: 680px;
  margin: 0 auto;
}

.kbm-search-input {
  flex: 1;
  padding: 10px 14px;
  font-size: 1rem;
  border: 1px solid #cfcfcf;
  border-right: none;
  border-radius: 8px 0 0 8px;
}

.kbm-search-btn {
  background: var(--kbm-green);
  color: #fff;
  border: none;
  padding: 10px 16px;
  border-radius: 0 8px 8px 0;
  cursor: pointer;
  font-size: 1rem;
}

.kbm-search-btn:hover {
  background: var(--kbm-green-2);
}

/* ===== RESPONSIVE ===== */
@media (max-width:1024px) {
  .kbm-topbar {
    flex-direction: column;
    gap: 4px;
    padding: 4px 10px;
  }

  .kbm-logo-text {
    font-size: 2.3rem;
  }

  .kbm-logo .tagline {
    font-size: .85rem;
    margin-top: 1px;
  }

  .kbm-menu {
    flex-wrap: wrap;
    justify-content: center;
    gap: 14px;
  }
}

@media (max-width:600px) {
  .kbm-logo-text {
    font-size: 2rem;
  }

  .kbm-logo .tagline {
    font-size: .8rem;
  }

  .kbm-menu {
    gap: 10px;
  }

  .kbm-search-wrap {
    max-width: 75%;
  }

  .kbm-search-input {
    padding: 8px 12px;
    font-size: .95rem;
  }

  .kbm-search-btn {
    padding: 8px 12px;
    font-size: .95rem;
  }
}

/* ===== HAMBURGER MENU ===== */
.kbm-hamburger {
  display: none;
  flex-direction: column;
  gap: 5px;
  background: none;
  border: none;
  padding: 8px;
  cursor: pointer;
  z-index: 1300;
}

.kbm-hamburger span {
  width: 28px;
  height: 3px;
  background: var(--kbm-green);
  border-radius: 2px;
  transition: all 0.3s ease;
}

.kbm-hamburger.active span:nth-child(1) {
  transform: rotate(45deg) translate(8px, 8px);
}

.kbm-hamburger.active span:nth-child(2) {
  opacity: 0;
}

.kbm-hamburger.active span:nth-child(3) {
  transform: rotate(-45deg) translate(8px, -8px);
}

@media (max-width:768px) {
  .kbm-hamburger {
    display: flex;
  }

  .kbm-nav {
    position: fixed;
    top: 0;
    right: -100%;
    width: 280px;
    height: 100vh;
    background: var(--kbm-bg);
    box-shadow: -4px 0 12px rgba(0, 0, 0, .1);
    transition: right 0.3s ease;
    overflow-y: auto;
    padding-top: 80px;
  }

  .kbm-nav.mobile-open {
    right: 0;
  }

  .kbm-menu {
    flex-direction: column;
    align-items: stretch;
    gap: 0;
    padding: 20px;
  }

  .kbm-menu > li > a {
    padding: 12px 14px;
    display: block;
  }

  .kbm-menu .dd-panel {
    position: static;
    opacity: 1;
    visibility: visible;
    pointer-events: auto;
    transform: none;
    box-shadow: none;
    border: none;
    border-left: 3px solid var(--kbm-green-2);
    margin-left: 14px;
    margin-top: 6px;
    padding-left: 12px;
    background: transparent;
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.3s ease;
  }

  .kbm-menu .dd.open > .dd-panel {
    max-height: 500px;
  }

  .login-li {
    margin-top: 12px;
    padding-top: 12px;
    border-top: 1px solid rgba(0, 0, 0, .1);
  }

  .kbm-login {
    width: 100%;
    text-align: center;
  }
}
</style>

<section class="kbm-header-wrap">
  <header class="kbm-header">
    <div class="kbm-container kbm-topbar">
      <a href="/" class="kbm-logo">
        <div class="kbm-logo-text">KNIT<span class="by">by</span>MACHINE</div>
        <div class="tagline">Tools and inspiration for confident machine knitters</div>
      </a>

      <!-- Hamburger button for mobile -->
      <button class="kbm-hamburger" aria-label="Toggle menu" aria-expanded="false">
        <span></span>
        <span></span>
        <span></span>
      </button>

      <nav class="kbm-nav" aria-label="Primary">
        <ul class="kbm-menu">
          <li class="dd">
            <a href="#">Patterns <span class="caret">▾</span></a>
            <ul class="dd-panel">
              <li><a href="/patterns">Patterns</a></li>
              <li><a href="/tools">Tools</a></li>
              <li><a href="/practice">Practice</a></li>
            </ul>
          </li>
          <li class="dd">
            <a href="/workshops">Workshops <span class="caret">▾</span></a>
            <ul class="dd-panel">
              <li><a href="/workshops">Upcoming Events</a></li>
              <li><a href="/workshops">On-Demand</a></li>
            </ul>
          </li>
          <li class="dd">
            <a href="#">Help Hub <span class="caret">▾</span></a>
            <ul class="dd-panel help-menu">
              <li><a href="/ask-n-answer">Ask ’n Answer (Tips)</a></li>
              <li><a href="/sizing-chart">Sizing Charts/References</a></li>
              <li><a href="/glossary">Glossary</a></li>
              <li><a href="/machine-history">Machine History</a></li>
            </ul>
          </li>
          <li class="login-li"><a class="kbm-login" href="#">Log In</a></li>
        </ul>
      </nav>
    </div>

    <div class="kbm-searchbar">
      <div class="kbm-container kbm-search-wrap">
        <input class="kbm-search-input" type="search" placeholder="Search…" aria-label="Search" />
        <button class="kbm-search-btn" aria-label="Submit search"><i class="fa fa-search"></i></button>
      </div>
    </div>
  </header>
</section>

<script is:inline>
  (() => {
    const dds = document.querySelectorAll('.kbm-menu .dd');
    const isTouchLike =
      matchMedia('(hover: none), (pointer: coarse)').matches || window.innerWidth <= 1024;

    function closeAll(except) {
      dds.forEach(li => {
        if (li !== except) li.classList.remove('open');
      });
    }

    dds.forEach(li => {
      li.addEventListener('mouseenter', () => {
        clearTimeout(li._closeTimeout);
        li.classList.add('open');
      });
      li.addEventListener('mouseleave', () => {
        li._closeTimeout = setTimeout(() => li.classList.remove('open'), 250);
      });
    });

    if (isTouchLike) {
      dds.forEach(li => {
        const trigger = li.querySelector(':scope > a');
        trigger.addEventListener('click', e => {
          e.preventDefault();
          const nowOpen = li.classList.toggle('open');
          if (nowOpen) closeAll(li);
        });
      });
      document.addEventListener('click', e => {
        if (!e.target.closest('.kbm-nav')) closeAll();
      });
    }

    // Hamburger menu toggle
    const hamburger = document.querySelector('.kbm-hamburger');
    const nav = document.querySelector('.kbm-nav');
    
    if (hamburger && nav) {
      hamburger.addEventListener('click', () => {
        const isOpen = nav.classList.toggle('mobile-open');
        hamburger.classList.toggle('active');
        hamburger.setAttribute('aria-expanded', isOpen);
        
        // Prevent body scroll when menu is open on mobile
        if (isOpen) {
          document.body.style.overflow = 'hidden';
        } else {
          document.body.style.overflow = '';
        }
      });

      // Close menu when clicking outside on mobile
      document.addEventListener('click', (e) => {
        if (window.innerWidth <= 768 && 
            !nav.contains(e.target) && 
            !hamburger.contains(e.target) && 
            nav.classList.contains('mobile-open')) {
          nav.classList.remove('mobile-open');
          hamburger.classList.remove('active');
          hamburger.setAttribute('aria-expanded', 'false');
          document.body.style.overflow = '';
        }
      });
    }
  })();
</script>
