---
import type { GlossaryTerm } from "../types/sanity";

interface Props {
  term: GlossaryTerm;
}

const { term } = Astro.props;
const imageUrl = term.image;
---

<section class="term-hero">
  {imageUrl ? (
    <div class="hero-image-container">
      <img 
        src={imageUrl} 
        alt={term.imageAlt || term.title} 
        class="hero-image"
      />
    </div>
  ) : (
    <div class="hero-image-placeholder">
      <span class="placeholder-text">No image available</span>
    </div>
  )}
  
  <div class="hero-content">
    <h1 class="hero-title">{term.title}</h1>
    {term.excerpt && (
      <p class="hero-excerpt">{term.excerpt}</p>
    )}
    <p class="hero-meta">
      Last updated: {new Date(term._updatedAt).toLocaleDateString("en-US", {
        year: "numeric",
        month: "long",
        day: "numeric",
      })}
    </p>
  </div>
</section>

<style>
  .term-hero {
    margin: 2rem 0 3rem;
  }

  .hero-image-container {
    max-width: 720px;
    margin: 0 auto 2rem;
    background: #faf8f5;
    border-radius: 12px;
    overflow: hidden;
  }

  .hero-image {
    width: 100%;
    height: auto;
    display: block;
    object-fit: contain;
    max-height: 500px;
  }

  .hero-image-placeholder {
    max-width: 720px;
    margin: 0 auto 2rem;
    background: #f5f5f5;
    border-radius: 12px;
    padding: 3rem;
    text-align: center;
    border: 2px dashed #e0e0e0;
  }

  .placeholder-text {
    color: #999;
    font-style: italic;
  }

  .hero-content {
    text-align: center;
  }

  .hero-title {
    font-size: 2.5rem;
    font-weight: 700;
    margin: 0 0 1rem;
    line-height: 1.2;
  }

  .hero-excerpt {
    font-size: 1.25rem;
    color: #555;
    margin: 0 0 1rem;
    line-height: 1.5;
  }

  .hero-meta {
    font-size: 0.9rem;
    color: #888;
    margin: 0;
  }

  @media (max-width: 768px) {
    .hero-title {
      font-size: 2rem;
    }

    .hero-excerpt {
      font-size: 1.1rem;
    }
  }
</style>
