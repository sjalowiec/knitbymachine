---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Header from "../../components/header.astro";
import Footer from "../../components/footer.astro";
import "../../styles/global.css";
---

<BaseLayout 
  title="Boat Neck Sweater Pattern | Knit by Machine" 
  description="Create your own boat neck sweater — sleeveless or with sleeves of any length. Enter your gauge, adjust sizing, and knit it in any yarn or stitch pattern.">

<Header />

<style>
.wizard-page {
  padding-top: 120px;
  padding-bottom: 3rem;
  min-height: 100vh;
  background: var(--page-bg);
}

.page-header {
  max-width: 800px;
  margin: 0 auto 2rem;
  padding: 0 1rem;
}

.page-header-title {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 1rem;
  margin-bottom: 0.75rem;
  flex-wrap: wrap;
}

@media (max-width: 640px) {
  .page-header-title {
    flex-direction: column;
    gap: 0.75rem;
  }
}

.page-header h1 {
  color: var(--kbm-green);
  font-size: 2rem;
  font-weight: 700;
  margin: 0;
}

.page-header p {
  color: #6b7280;
  font-size: 1.05rem;
  line-height: 1.6;
  text-align: center;
}

.video-button {
  display: inline-flex;
  align-items: center;
  gap: 0.4rem;
  padding: 0.5rem 1rem;
  background: #e5e7eb;
  color: #374151;
  text-decoration: none;
  font-weight: 600;
  border-radius: 6px;
  transition: all 0.2s;
  border: 1px solid #d1d5db;
  cursor: pointer;
  font-size: 0.9rem;
  white-space: nowrap;
}

.video-button:hover {
  background: #d1d5db;
  transform: translateY(-1px);
  box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
}

.wizard-container {
  max-width: 1000px;
  margin: 0 auto;
  background: white;
  padding: 2rem;
  border-radius: 12px;
  box-shadow: 0 2px 8px rgba(0,0,0,0.08);
}

.wizard-frame {
  width: 100%;
  min-height: 800px;
  border: none;
  border-radius: 8px;
}
</style>

<div class="wizard-page">
  <div class="page-header">
    <div class="page-header-title">
      <h1>
        <i class="fas fa-shirt"></i>
        Boat Neck Sweater Pattern
      </h1>
      <button class="video-button" onclick="alert('Video tutorial coming soon!')">
        <i class="fas fa-play-circle"></i> Watch Tutorial
      </button>
    </div>
    <p>
      Knit a timeless boat neck sweater — perfectly sized for you. Create sleeveless or with sleeves of any length in your favorite yarn.
    </p>
  </div>

  <div class="wizard-container">
    <iframe 
      src="https://wizards.knitbymachine.com/boat-neck" 
      class="wizard-frame"
      title="Boat Neck Sweater Pattern Tool"
    ></iframe>
  </div>
</div>

<Footer />
</BaseLayout>
