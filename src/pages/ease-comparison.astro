</BaseLayout>

<!-- ======================================== -->
<!-- JS FOR TAB SWITCHING + UNIT TOGGLE -->
<!-- ======================================== -->
<script is:inline>
  window.addEventListener("DOMContentLoaded", () => {
    const tabs = document.querySelectorAll(".ease-tab");
    const contents = document.querySelectorAll(".ease-tab-content");
    const toggle = document.getElementById("unitToggle");

    tabs.forEach((tab) => {
      tab.addEventListener("click", () => {
        tabs.forEach((t) => t.classList.remove("active"));
        contents.forEach((c) => c.classList.remove("active"));
        tab.classList.add("active");
        const target = document.getElementById(tab.dataset.tab);
        if (target) target.classList.add("active");
      });
    });

    if (toggle) {
      toggle.addEventListener("change", function () {
        const isCM = this.checked;
        const cells = document.querySelectorAll(
          ".ease-table td:last-child, .ease-table td:nth-child(3), .ease-table td:nth-child(4)"
        );
        cells.forEach((cell) => {
          if (isCM) {
            cell.textContent = cell.textContent.replace(
              /(\d*\.?\d*)("|”)/g,
              (_, n) => Math.round(parseFloat(n) * 2.54) + " cm"
            );
          } else {
            location.reload();
          }
        });
      });
    }
  });
</script>

<!-- ======================================== -->
<!-- STYLES -->
<!-- ======================================== -->
<style>
.ease-wrapper {font-family:inherit;color:#333;padding-top:40px;}
.ease-intro {margin-bottom:40px;text-align:left;}
.ease-intro h2 {font-size:1.8em;color:#6E8B3D;font-weight:700;margin-bottom:10px;border-bottom:2px solid #6E8B3D;display:inline-block;padding-bottom:4px;}
.ease-summary {font-size:1.1em;margin-top:8px;margin-bottom:20px;line-height:1.6;}
.ease-note {font-size:.95em;background:#f5f5f5;border-left:4px solid #6E8B3D;padding:10px 14px;border-radius:4px;color:#555;}
.ease-note a {color:#6E8B3D;text-decoration:none;font-weight:600;}
.ease-note a:hover {text-decoration:underline;}

.ease-tabs {display:flex;flex-wrap:wrap;gap:8px;margin-bottom:18px;align-items:center;}
.ease-tab {padding:10px 16px;border:1px solid #ccc;background:#f5f5f5;color:#6E8B3D;font-weight:600;border-radius:6px;cursor:pointer;transition:all .25s ease;}
.ease-tab.active,.ease-tab:hover {background:#6E8B3D;color:#fff;border-color:#6E8B3D;}
.ease-toggle {margin-left:auto;display:flex;align-items:center;gap:6px;}
.switch {position:relative;display:inline-block;width:40px;height:20px;}
.switch input {opacity:0;width:0;height:0;}
.slider {position:absolute;cursor:pointer;top:0;left:0;right:0;bottom:0;background-color:#ccc;transition:.3s;border-radius:20px;}
.slider:before {position:absolute;content:"";height:14px;width:14px;left:3px;bottom:3px;background-color:white;transition:.3s;border-radius:50%;}
input:checked + .slider {background-color:#6E8B3D;}
input:checked + .slider:before {transform:translateX(20px);}
.unit-label {font-size:14px;color:#555;font-weight:600;}

.ease-tab-content {display:none !important;opacity:0;transform:translateY(10px);transition:opacity .4s ease,transform .4s ease;}
.ease-tab-content.active {display:block !important;opacity:1;transform:translateY(0);}
.ease-row {display:flex;flex-wrap:wrap;gap:20px;align-items:flex-start;}
.ease-col {flex:1 1 360px;}
.ease-col img {width:100%;height:auto;display:block;}
.ease-table {width:100%;border-collapse:collapse;margin-top:8px;font-size:16px;}
.ease-table th {background:#6E8B3D;color:#fff;padding:8px;text-align:center;}
.ease-table td {padding:6px 8px;border-bottom:1px solid #e9e9e9;}
.ease-table td:first-child {text-align:center;}
.numb {display:inline-flex;align-items:center;justify-content:center;width:22px;height:22px;background:#6E8B3D;color:#fff;border-radius:50%;font-size:12px;font-weight:700;}

@media(max-width:767px){
  .ease-row{flex-direction:column-reverse;}
  .ease-tab{flex:1 1 auto;text-align:center;}
}
</style>
