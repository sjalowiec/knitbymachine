                <tr><td><span class="numb">17</span></td><td>Waist</td><td>.5–1"</td></tr>
                <tr><td><span class="numb">18</span></td><td>High Hip</td><td>1.5–2"</td></tr>
                <tr><td><span class="numb">19</span></td><td>Hip to Fullest Part</td><td>2–3"</td></tr>
